					<m:SearchField width="50%" search=".onFilterProducts"/>
				</m:Toolbar>
			</m:OverflowToolbar>
			<items>
				<ColumnListItem
				type="Navigation"
							press="onPress">
					<m:Text text="{ProductID}"/>
