<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ProductsList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		showNavButton="true"
		navButtonPress=".onNavBack">
		<headerContent>
			<Title text="{i18n>appTitle}"/>
		</headerContent>
		<content>
		<Table id="productsTable" items="{/Products}">
			<headerToolbar>
				<Toolbar>
					<Title text="{i18n>productsListTitle}"/>
					<ToolbarSpacer/>
					<SearchField width="50%" search=".onFilterProducts"/>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column class=".sapMSltMinWidth" id="ProductNameColumn">
					<header>
						<Text text="{i18n>productNameColumn}" />
					</header>
				</Column>
				<Column class=".sapMSltMinWidth" id="SupplierIDColumn">
					<header>
						<Text text="{i18n>supplierIDColumn}" />
					</header>
				</Column>
				<Column class=".sapMSltMinWidth" id="QuantityColumn">
					<header>
						<Text text="{i18n>quantityColumn}" />
					</header>
				</Column>
				<Column class=".sapMSltMinWidth" id="PriceColumn">
					<header>
						<Text text="{i18n>priceColumn}"/>
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem
				type="Navigation"
							press="onPress">
					<Text text="{ProductName}" />
					<Text text="{SupplierID}" />
					<Text text="{UnitsInStock}" />
					<Text text="{UnitPrice}" />
				</ColumnListItem>
			</items>
		</Table>
		</content>
		<footer>
				<OverflowToolbar>
				<ToolbarSpacer/>
				<Title text="{i18n>appDevelopers}"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
