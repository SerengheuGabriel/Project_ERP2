<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ProductsList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		showNavButton="true"
		navButtonPress=".onNavBack">
		<headerContent>
			<Title text="{i18n>appTitle}"/>
		</headerContent>
		<content>
		<Table id="productsTable" items="{/Products}">
			<columns>
				<Column width="11em">
					<header>
						<Text text="Product Name" />
					</header>
				</Column>
				<Column hAlign="End" width="5em">
					<header>
						<Text text="Supplier" />
					</header>
				</Column>
				<Column hAlign="End" width="5em">
					<header>
						<Text text="Units In Stock" />
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<Text text="{ProductName}" />
					<Text text="{SupplierID}" />
					<Text text="{UnitsInStock}" />
				</ColumnListItem>
			</items>
		</Table>
		</content>
		<footer>
				<OverflowToolbar>
				<ToolbarSpacer/>
				<Title text="{i18n>appDevelopers}"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
